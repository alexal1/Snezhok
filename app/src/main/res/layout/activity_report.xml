<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorReport"
    android:onClick="onClick"
    android:clickable="true"
    android:gravity="center_vertical"
    tools:context="com.alex_aladdin.snowball.ReportActivity">

    <com.alex_aladdin.snowball.AutoFitTextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="50dp"
        android:paddingLeft="50dp"
        android:paddingEnd="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="60dp"
        android:textSize="300sp"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textTap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@id/textTitle"
        android:text="@string/report_tap"
        android:textSize="30sp"
        android:textColor="@color/colorText" />

</RelativeLayout>